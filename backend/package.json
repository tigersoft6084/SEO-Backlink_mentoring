{
  "name": "payload-cms-backend",
  "version": "1.0.0",
  "description": "A backend for Payload CMS with optimized settings",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "cross-env PORT=2024 NODE_OPTIONS=--no-deprecation next dev & payload dev",
    "dev:clean": "rm -rf .next && cross-env PORT=2024 NODE_OPTIONS=--no-deprecation next dev",
    "dev:hot": "nodemon --watch . --exec 'npm run dev'",
    "build": "cross-env PORT=2024 NODE_OPTIONS=--no-deprecation next build",
    "start": "cross-env PORT=2024 NODE_ENV=production NODE_OPTIONS=--no-deprecation next start",
    "cms:importmap": "payload generate:importmap",
    "cms:types": "payload generate:types",
    "cms:run": "payload",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "clean": "rm -rf .next node_modules && npm install",
    "reset": "rm -rf .next node_modules .payload && npm install"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/payload-cloud": "latest",
    "@payloadcms/richtext-lexical": "latest",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@paypal/react-paypal-js": "^8.8.1",
    "@types/node-cron": "^3.0.11",
    "axios-retry": "^4.5.0",
    "cheerio": "^1.0.0",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "google-auth-library": "^9.15.0",
    "graphql": "^16.8.1",
    "next": "15.1.0",
    "next-auth": "^4.24.11",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "p-limit": "^6.2.0",
    "p-queue": "^8.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "payload": "latest",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "^0.32.6",
    "ts-node": "^10.9.2",
    "whoiser": "^1.18.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/next": "^8.0.7",
    "@types/node": "^22.10.2",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/paypal__checkout-server-sdk": "^1.0.8",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
